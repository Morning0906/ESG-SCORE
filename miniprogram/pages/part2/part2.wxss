/* pages/search/search.wxss */
page{
  background: #7ec6cc;
  height: 100%;
}

.tittle{
  font-size: 80rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 180rpx;
}

.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.search{
  position: relative;
  width: 100%;
  height: 200rpx;
  background: #fff;
  display: flex;
  border-radius: 20rpx;
  align-items: center;
  justify-content: center;
}
.search_input{
  position:relative;
  width: 85%;
  height: 200rpx;
  background-color: white;
  border: 1px solid #fff;
}
.search_input2{
  width: 90%;
  color: black;
}
.search_clear{
  position: absolute;
  top: 0;
  right: 5rpx;
  width: 50rpx;
  height: 50rpx;
}
.search_image{
  width: 50rpx;
  height: 50rpx;
}
.search_scroll{
  position: relative;
  background: #fff;
  border-radius: 25rpx;
  opacity: 0.8;
  width: 100%;
  height: 90vh;
}

.search_scroll-2{
  position: relative;
  background: #7ec6cc;
  width: 100%;
  height: 90vh;
}

.search_kuangjia{
  width: 100%;
  padding: 3%;
  opacity: 0.7;
}
.search_items{
  border-radius: 2%;
  overflow: hidden;
  width: 94%;
  height: auto;
  background-color: #fff;
  margin-bottom: 20rpx;
  opacity: 0.8;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.search_images{
  height: 250rpx;
  width: 250rpx;
}
.wenzi{
  width: 65%;
  position: relative;
  font-size: 28rpx;
  background-color: rgb(224, 222, 224);
  height: 250rpx;
  color: black;
  text-align: center;
}
.xinxi{
  height: auto;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 40rpx;
  padding-right: 30rpx;
  padding-left: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
}
